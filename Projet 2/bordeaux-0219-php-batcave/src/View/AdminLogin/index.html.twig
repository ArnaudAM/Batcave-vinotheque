{% extends 'layout.html.twig' %}

{% block content %}
    <section class="sectionAdmin">
        <h1 class="title-admin-login">Connexion</h1>
        <div class="container admin-login-form">
            {% for error in errors %}
                <div class="alert alert-danger">
                    <strong>{{ error }}</strong>
                </div>
            {% endfor %}
            <form method="post" class="formAdminLogin">
                <div class="Box">
                <div class="col-md-8 form-group identificationBox">
                    <label for="login">Identifiant</label>
                    <input type="text" class="form-control" id="login" placeholder="Login" name="login">
                </div>
                <div class="form-group col-md-8 passwordBox">
                    <label for="password">Mot de passe</label>
                    <input type="password" class="form-control" id="password" placeholder="Password" name="password">
                </div>
                </div>
                <button name="submit" type="submit" class="btn admin-login-btn">Go Alfred</button>
            </form>
        </div>
    </section>
{% endblock %}
